<link href="/styles/nav.css" rel="stylesheet" type="text/css" />
<link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


<header>
  <nav>
    <form method="GET" action="/:userid">

      <button class='title'> <i class="fas fa-brain hvr-grow"></i>Newton</button>
    </form>
    <% if (!resource.userId) { %>
    <div class="user-buttons">
      <form method="GET" action="/login">
        <button class="hvr-grow">Login</button>
      </form>
      <form method="GET" action="/signup">
        <button class="hvr-grow">Sign Up</button>
      </form>
    <% } else { %>
      <div class="user-buttons">
        <form method="GET" action="/myResources">
          <button class="hvr-grow" >My Resources</button>
        </form>
        <form method="GET" action="/profile/<%= resource.userId %>">
          <button class="hvr-grow" >My Profile</button>
        </form>
        <form method="POST" action="/logout">
          <button class="hvr-grow">Logout</button>
        </form>
      <% } %>

    </div>
  </nav>
</header>
